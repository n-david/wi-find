<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Open+Sans">
<style>
    body {
    font-family: "Open Sans";
}
</style>

<div class="text-center">
    <div class="headers">
        <h1>edit entry</h1>
    </div>
    <%= form_for @item do |item| %>
        <p>
            <%= item.label :location, "Location" %><br>
            <%= item.text_field :location %>
        </p>
        
        <p>
            <%= item.label :title, "Name" %><br>
            <%= item.text_field :title %>
        </p>
        
        <p>
            <%= item.label :notes, "Password" %><br>
            <%= item.text_area :notes %>
        </p>
        
        <p>
            <b>Active</b>
            <%= item.check_box :verified %>
        </p>
        </br>
        <p>
            <%= item.submit " + edit entry ", :class => "add_edit_button" %>
        </p>
    <% end %>
    
    <%= button_to items_path, :class => "list_button_search glyphicon glyphicon-list", :method => :get do %>
    <% end %>
</div>
