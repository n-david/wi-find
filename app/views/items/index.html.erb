<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
<link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Open+Sans">
<style>
    body {
    font-family: "Open Sans";
}
</style>

<div class="text-center">
    <div class="headers">
        <h1><b>wiâ€”find</b></h1>
    </div>
    <% if params[:search].blank? %>
        <table class="table table-hover">
            <tr>
                <th style="font-size: 13pt">Location</th>
                <th style="font-size: 13pt">Name</th>
                <th style="font-size: 13pt">Password</th>
                <th style="font-size: 13pt">Active</th>
                <th colspan="3"></th>
            </tr>
        
        <% @items.each do |item| %>
            <tr>
                <td><%= item.location %></td>
                <td><%= item.title %></td>
                <td><%= item.notes %></td>
                <% if item.verified %>
                    <td><%= image_tag("greendot.png", :size => "10x10", :class => "green_dot") %></td>
                <% else %>
                    <td><%= image_tag("greencircle.png", :size => "10x10", :class => "green_dot") %></td>
                <% end %>
                <td><%= button_to edit_item_path(item), :class => "button1 glyphicon glyphicon-pencil", :method => :get do %>
                    <% end %></td>
                <td><%= button_to item_path(item), method: :delete, :class => "button1 glyphicon glyphicon-trash" do %>
                    <% end %></td>
            </tr>
        <% end %>
        </table>

    <% else %>
        <% if @items.blank? %>
            <p>No WiFi networks found containing <%= params[:search] %>.</p>
            
        <% else %>
        <table class="table table-hover">
            <tr>
                <th style="font-size: 13pt">Location</th>
                <th style="font-size: 13pt">Name</th>
                <th style="font-size: 13pt">Password</th>
                <th style="font-size: 13pt">Active</th>
                <th colspan="3"></th>
            </tr>
        
        <% @items.each do |item| %>
            <tr>
                <td><%= item.location %></td>
                <td><%= item.title %></td>
                <td><%= item.notes %></td>
                <% if item.verified %>
                    <td><%= image_tag("greendot.png", :size => "10x10", :class => "green_dot") %></td>
                <% else %>
                    <td><%= image_tag("greencircle.png", :size => "10x10", :class => "green_dot") %></td>
                <% end %>                
                <td><%= button_to edit_item_path(item), :class => "button1 glyphicon glyphicon-pencil", :method => :get do %>
                    <% end %></td>
                <td><%= button_to item_path(item), method: :delete, :class => "button1 glyphicon glyphicon-trash" do %>
                    <% end %></td>
            </tr>
        <% end %>
        </table>
        <% end %>
        
        <p><%= button_to items_path, :class => "list_button_search glyphicon glyphicon-list", :method => :get do %>
            <% end %>
        </p>
    <% end %>
</div>
